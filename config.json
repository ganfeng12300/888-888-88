      "timeseries_prophet": 0.20,
      "reinforcement_executor": 0.20,
      "integration_coordinator": 0.15,
      "meta_commander": 0.15
    },
    "agent_configs": {
      "expert_guardian": {
        "enabled": true,
        "confidence_threshold": 0.8,
        "rule_strictness": 0.9,
        "enable_safety_checks": true
      },
      "transfer_adapter": {
        "enabled": true,
        "adaptation_rate": 0.1,
        "source_markets": ["stocks", "forex", "commodities"],
        "enable_cross_market_learning": true
      },
      "timeseries_prophet": {
        "enabled": true,
        "prediction_horizon": 24,
        "model_type": "lstm_transformer",
        "enable_seasonal_adjustment": true,
        "enable_trend_analysis": true
      },
      "reinforcement_executor": {
        "enabled": true,
        "learning_rate": 0.001,
        "exploration_rate": 0.1,
        "reward_function": "sharpe_ratio",
        "enable_experience_replay": true
      },
      "integration_coordinator": {
        "enabled": true,
        "coordination_method": "weighted_average",
        "enable_conflict_resolution": true,
        "enable_performance_tracking": true
      },
      "meta_commander": {
        "enabled": true,
        "meta_learning_rate": 0.01,
        "strategy_adaptation_rate": 0.05,
        "enable_strategy_evolution": true
      }
    }
