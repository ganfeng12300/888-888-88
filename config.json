{
  "system": {
    "name": "Ultimate Contract Trading System",
    "version": "1.0.0",
    "environment": "production",
    "debug": false,
    "log_level": "INFO",
    "timezone": "Asia/Shanghai",
    "auto_start_trading": false,
    "status_update_interval": 10,
    "web_port": 8888,
    "api_port": 8889,
    "websocket_port": 8890,
    "max_workers": 20,
    "enable_gpu": true,
    "enable_monitoring": true,
    "enable_alerts": true
  },
  "gpu_optimizer": {
    "target_gpu_utilization": 85.0,
    "max_memory_usage": 90.0,
    "monitoring_interval": 5,
    "optimization_interval": 30,
    "enable_memory_optimization": true,
    "enable_performance_monitoring": true,
    "gpu_memory_threshold": 0.9,
    "cpu_threads_auto_adjust": true,
    "max_cpu_threads": 32,
    "memory_cleanup_interval": 60,
    "performance_log_interval": 300
  },
  "bybit_trader": {
    "api_key": "",
    "api_secret": "",
    "testnet": true,
    "base_url_testnet": "https://api-testnet.bybit.com",
    "base_url_mainnet": "https://api.bybit.com",
    "websocket_url_testnet": "wss://stream-testnet.bybit.com/v5/public/linear",
    "websocket_url_mainnet": "wss://stream.bybit.com/v5/public/linear",
    "symbols": ["BTCUSDT", "ETHUSDT", "ADAUSDT", "SOLUSDT", "DOTUSDT"],
    "leverage": 10,
    "max_position_size": 0.1,
    "min_order_size": 0.001,
    "max_daily_loss": 0.03,
    "stop_loss_pct": 0.02,
    "take_profit_pct": 0.04,
    "order_timeout": 30,
    "max_retries": 3,
    "retry_delay": 1,
    "rate_limit_requests_per_second": 10,
    "rate_limit_burst": 20,
    "enable_websocket": true,
    "websocket_reconnect_interval": 30,
    "position_sync_interval": 5,
    "balance_sync_interval": 10,
    "enable_order_book": true,
    "order_book_depth": 20
  },
  "risk_controller": {
    "max_daily_drawdown": 0.03,
    "max_total_drawdown": 0.15,
    "max_position_size": 0.25,
    "max_total_exposure": 0.80,
    "max_correlation": 0.70,
    "volatility_threshold": 0.05,
    "hard_stop_loss": 0.03,
    "soft_stop_loss": 0.02,
    "trailing_stop": 0.015,
    "monitoring_interval": 1,
    "alert_cooldown": 60,
    "emergency_stop_threshold": 0.08,
    "max_consecutive_losses": 5,
    "max_daily_trades": 100,
    "min_account_balance": 1000,
    "risk_score_threshold": 80,
    "enable_dynamic_position_sizing": true,
    "enable_correlation_check": true,
    "enable_volatility_filter": true,
    "enable_liquidity_check": true,
    "liquidity_threshold": 1000000,
    "max_slippage": 0.001,
    "enable_stress_testing": false,
    "stress_test_interval": 3600
  },
  "timezone_scheduler": {
    "local_timezone": "Asia/Shanghai",
    "check_interval": 60,
    "activity_window": 300,
    "enable_dynamic_scheduling": true,
    "market_sessions": {
      "asian": {
        "start_hour": 0,
        "end_hour": 9,
        "mode": "conservative",
        "max_positions": 3,
        "position_size_multiplier": 0.7,
        "risk_multiplier": 0.8,
        "frequency_multiplier": 0.6
      },
      "european": {
        "start_hour": 7,
        "end_hour": 16,
        "mode": "moderate",
        "max_positions": 5,
        "position_size_multiplier": 1.0,
        "risk_multiplier": 1.0,
        "frequency_multiplier": 1.0
      },
      "american": {
        "start_hour": 13,
        "end_hour": 22,
        "mode": "moderate",
        "max_positions": 5,
        "position_size_multiplier": 1.0,
        "risk_multiplier": 1.0,
        "frequency_multiplier": 1.0
      },
      "overlap": {
        "sessions": [
          {"start": 7, "end": 9, "name": "亚欧重叠"},
          {"start": 13, "end": 16, "name": "欧美重叠"}
        ],
        "mode": "aggressive",
        "max_positions": 8,
        "position_size_multiplier": 1.5,
        "risk_multiplier": 1.2,
        "frequency_multiplier": 2.0
      },
      "quiet": {
        "mode": "sleep",
        "max_positions": 1,
        "position_size_multiplier": 0.3,
        "risk_multiplier": 0.5,
        "frequency_multiplier": 0.2
      }
    },
    "activity_thresholds": {
      "very_low": 10,
      "low": 30,
      "medium": 50,
      "high": 70,
      "very_high": 90
    }
  },
  "fusion_system": {
    "max_decision_history": 10000,
    "performance_window": 100,
    "weight_update_interval": 60,
    "min_confidence_threshold": 0.3,
    "max_agents": 6,
    "enable_agent_evolution": true,
    "evolution_interval": 3600,
    "performance_decay_factor": 0.95,
    "consensus_threshold": 0.6,
    "enable_meta_learning": true,
    "meta_learning_interval": 1800,
    "enable_ensemble_voting": true,
    "voting_weights": {
      "expert_guardian": 0.15,
