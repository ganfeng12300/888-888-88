# 888-888-88 量化交易系统环境变量配置模板
# 复制此文件为 .env 并填入真实值

# =============================================================================
# 系统配置
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# 安全配置
# =============================================================================
# 主密码（用于加密API密钥）
DEFAULT_MASTER_PASSWORD=your_secure_master_password_here

# JWT密钥
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 交易所API配置 - 币安 (Binance)
# =============================================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_SANDBOX=false

# 测试环境
BINANCE_TEST_API_KEY=your_binance_test_api_key
BINANCE_TEST_API_SECRET=your_binance_test_secret_key

# =============================================================================
# 交易所API配置 - OKX
# =============================================================================
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
OKX_SANDBOX=false

# =============================================================================
# 交易所API配置 - Bybit
# =============================================================================
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key
BYBIT_SANDBOX=false

# =============================================================================
# 交易所API配置 - Bitget
# =============================================================================
BITGET_API_KEY=your_bitget_api_key
BITGET_SECRET_KEY=your_bitget_secret_key
BITGET_PASSPHRASE=your_bitget_passphrase
BITGET_SANDBOX=false

# =============================================================================
# AI模型配置
# =============================================================================
# OpenAI API (如果使用)
OPENAI_API_KEY=your_openai_api_key

# 模型存储路径
MODEL_STORAGE_PATH=./models
MODEL_CACHE_SIZE=1000

# =============================================================================
# 监控和告警
# =============================================================================
# Slack通知
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#trading-alerts

# 邮件通知
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# =============================================================================
# 性能配置
# =============================================================================
# 最大并发连接数
MAX_CONCURRENT_CONNECTIONS=100

# 缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=10000

# =============================================================================
# 风险管理
# =============================================================================
# 最大杠杆
MAX_LEVERAGE=20

# 最大仓位比例
MAX_POSITION_RATIO=0.1

# 最大日损失比例
MAX_DAILY_LOSS_RATIO=0.03

# =============================================================================
# Web界面配置
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=4

# CORS配置
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# 开发和测试配置
# =============================================================================
# 测试模式
TEST_MODE=false

# 模拟交易
SIMULATION_MODE=false

# 调试模式
ENABLE_DEBUG_LOGS=false

